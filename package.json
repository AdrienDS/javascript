{
  "name": "seamapi",
  "version": "0.1.0",
  "license": "MIT",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "dependencies": {
    "axios": "0.25.0"
  },
  "devDependencies": {
    "@swc/core": "1.2.133",
    "@types/node": "17.0.10",
    "husky": ">=6",
    "lint-staged": "12.3.1",
    "prettier": "2.5.1",
    "tsup": "5.11.11",
    "typedoc": "0.22.11",
    "typedoc-plugin-markdown": "3.11.12",
    "typescript": "4.5.5"
  },
  "lint-staged": {
    "*.{ts,css,md}": "prettier --write"
  },
  "scripts": {
    "prepare": "husky install",
    "prepack": "npm run build",
    "build:package": "tsup",
    "build:docs": "typedoc --plugin typedoc-plugin-markdown --gitRevision main src/index.ts",
    "build": "npm run build:package && npm run build:docs"
  }
}
